pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'git@github.com:cheadman/notes-pwa.git'
                sh "npm install"
                sh "npm start"
                sh "npm test"
            }

            post {
                success {
                    echo 'done'
                }
                unsuccessful {
                    echo 'fail'
                }
            }
        }
    }
}
